<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= name %> - <%= title %></title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <!-- Scroll Progress Bar -->
  <div class="scroll-progress" id="scrollProgress"></div>

  <!-- Navigation -->
  <nav class="navbar"></nav>
    <div class="nav-container">
      <div class="nav-brand"><%= name %></div>
      <div class="nav-links">
        <a href="#home">Home</a>
        <a href="#about">About</a>
        <a href="#skills">Skills</a>
        <a href="#projects">Projects</a>
        <a href="#experience">Experience</a>
        <a href="#contact">Contact</a>
        <button class="theme-toggle" id="themeToggle">
          <i class="fas fa-moon"></i>
        </button>
      </div>
      <button class="mobile-menu-toggle" id="mobileMenuToggle">
        <i class="fas fa-bars"></i>
      </button>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="hero" id="home">
    <div class="hero-content animate-fade-in">
      <div class="profile-image-wrapper">
        <img src="<%= image %>" alt="<%= name %>" class="profile-image" draggable="false" oncontextmenu="return false;" ondragstart="return false;" />
      </div>
      <div class="hero-text">
        <h1 class="glitch" data-text="<%= name %>"><%= name %></h1>
        <h2 class="typing-text"><%= title %></h2>
        <div class="contact-info">
          <span><i class="fas fa-map-marker-alt"></i> <%= location %></span>
          <span><i class="fas fa-phone"></i> <a href="tel:<%= phone %>"><%= phone %></a></span>
          <span><i class="fas fa-envelope"></i> <a href="mailto:<%= email %>"><%= email %></a></span>
          <span><i class="fab fa-linkedin"></i> <a href="https://<%= linkedin %>" target="_blank">LinkedIn</a></span>
        </div>
        <div class="hero-buttons">
          <a href="#contact" class="btn btn-primary"><i class="fas fa-paper-plane"></i> Get In Touch</a>
          <a href="/download-resume" class="btn btn-secondary"><i class="fas fa-download"></i> Download Resume</a>
        </div>
      </div>
    </div>
    <div class="scroll-indicator">
      <i class="fas fa-chevron-down"></i>
    </div>
  </section>

  <div class="container">
    <!-- About Section -->
    <section class="section" id="about">
      <h2 class="section-title"><i class="fas fa-user"></i> About Me</h2>
      <div class="about-content">
        <p class="summary-text"><%= summary %></p>
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-number">9+</div>
            <div class="stat-label">Years Experience</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">50+</div>
            <div class="stat-label">Projects Completed</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">15+</div>
            <div class="stat-label">Technologies</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">100%</div>
            <div class="stat-label">Client Satisfaction</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="section" id="skills">
      <h2 class="section-title"><i class="fas fa-code"></i> Technical Skills</h2>
      <div class="skills-container">
        <% Object.keys(skills).forEach(category => { %>
        <div class="skill-category">
          <h3><%= category %></h3>
          <div class="skills-list">
            <% skills[category].forEach(skill => { %>
            <div class="skill-item">
              <span class="skill-name"><%= skill %></span>
              <div class="skill-bar">
                <div class="skill-progress" data-progress="<%= Math.floor(Math.random() * 20) + 80 %>"></div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
        <% }); %>
      </div>
    </section>

    <!-- Projects Section -->
    <section class="section" id="projects">
      <h2 class="section-title"><i class="fas fa-project-diagram"></i> Featured Projects</h2>
      <div class="projects-grid">
        <% projects.forEach((project, index) => { %>
        <div class="project-card" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
          <div class="project-icon"><%= project.icon %></div>
          <h3><%= project.name %></h3>
          <p><%= project.description %></p>
          <div class="project-tech">
            <% project.technologies.forEach(tech => { %>
            <span class="tech-tag"><%= tech %></span>
            <% }); %>
          </div>
          <div class="project-highlights">
            <% project.highlights.forEach(highlight => { %>
            <div class="highlight"><i class="fas fa-check-circle"></i> <%= highlight %></div>
            <% }); %>
          </div>
        </div>
        <% }); %>
      </div>
    </section>

    <!-- Experience Timeline -->
    <section class="section" id="experience">
      <h2 class="section-title"><i class="fas fa-briefcase"></i> Professional Journey</h2>
      <div class="timeline">
        <% experience.forEach((exp, index) => { %>
        <div class="timeline-item <%= index % 2 === 0 ? 'left' : 'right' %>">
          <div class="timeline-content">
            <div class="timeline-marker"></div>
            <h3><%= exp.role %></h3>
            <h4><%= exp.company %></h4>
            <ul>
              <% exp.responsibilities.forEach(resp => { %>
              <li><%= resp %></li>
              <% }); %>
            </ul>
          </div>
        </div>
        <% }); %>
      </div>
    </section>

    <!-- Education -->
    <section class="section">
      <h2 class="section-title"><i class="fas fa-graduation-cap"></i> Education</h2>
      <div class="education-grid">
        <% education.forEach(edu => { %>
        <div class="education-card">
          <div class="edu-icon"><i class="fas fa-university"></i></div>
          <h3><%= edu.degree %></h3>
          <p class="edu-institution"><%= edu.institution %></p>
          <% if (edu.year) { %>
          <p class="edu-year"><%= edu.year %></p>
          <% } %>
        </div>
        <% }); %>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="section">
      <h2 class="section-title"><i class="fas fa-quote-left"></i> Testimonials</h2>
      <div class="testimonials-slider">
        <% testimonials.forEach((testimonial, index) => { %>
        <div class="testimonial-card <%= index === 0 ? 'active' : '' %>">
          <div class="stars">
            <% for(let i = 0; i < testimonial.rating; i++) { %>
            <i class="fas fa-star"></i>
            <% } %>
          </div>
          <p class="testimonial-text">"<%= testimonial.text %>"</p>
          <div class="testimonial-author">
            <strong><%= testimonial.name %></strong>
            <span><%= testimonial.role %></span>
          </div>
        </div>
        <% }); %>
      </div>
      <div class="testimonial-controls">
        <button class="testimonial-prev"><i class="fas fa-chevron-left"></i></button>
        <button class="testimonial-next"><i class="fas fa-chevron-right"></i></button>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="section" id="contact">
      <h2 class="section-title"><i class="fas fa-envelope"></i> Get In Touch</h2>
      <div class="contact-container">
        <div class="contact-info-box">
          <h3>Let's Connect</h3>
          <p>I'm always open to discussing new projects, creative ideas, or opportunities to be part of your vision.</p>
          <div class="contact-details">
            <div class="contact-detail">
              <i class="fas fa-envelope"></i>
              <div>
                <strong>Email</strong>
                <a href="mailto:<%= email %>"><%= email %></a>
              </div>
            </div>
            <div class="contact-detail">
              <i class="fas fa-phone"></i>
              <div>
                <strong>Phone</strong>
                <a href="tel:<%= phone %>"><%= phone %></a>
              </div>
            </div>
            <div class="contact-detail">
              <i class="fas fa-map-marker-alt"></i>
              <div>
                <strong>Location</strong>
                <span><%= location %></span>
              </div>
            </div>
          </div>
        </div>
        <form class="contact-form" id="contactForm">
          <div class="form-group">
            <input type="text" name="name" placeholder="Your Name" required />
          </div>
          <div class="form-group">
            <input type="email" name="email" placeholder="Your Email" required />
          </div>
          <div class="form-group">
            <textarea name="message" rows="5" placeholder="Your Message" required></textarea>
          </div>
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-paper-plane"></i> Send Message
          </button>
          <div class="form-message" id="formMessage"></div>
        </form>
      </div>
    </section>

    <!-- Key Highlights -->
    <section class="section">
      <h2 class="section-title"><i class="fas fa-star"></i> Key Highlights</h2>
      <div class="highlights-grid">
        <% highlights.forEach((highlight, index) => { %>
        <div class="highlight-card" data-aos="zoom-in" data-aos-delay="<%= index * 100 %>">
          <i class="fas fa-check-circle"></i>
          <p><%= highlight %></p>
        </div>
        <% }); %>
      </div>
    </section>
  </div>

  <!-- Footer -->
  <footer>
    <div class="footer-content">
      <p>&copy; <%= year %> <%= name %>. All rights reserved.</p>
      <div class="social-links">
        <a href="https://<%= linkedin %>" target="_blank"><i class="fab fa-linkedin"></i></a>
        <a href="mailto:<%= email %>"><i class="fas fa-envelope"></i></a>
        <a href="tel:<%= phone %>"><i class="fas fa-phone"></i></a>
      </div>
    </div>
  </footer>

  <!-- Back to Top Button -->
  <button class="back-to-top" id="backToTop">
    <i class="fas fa-arrow-up"></i>
  </button>

  <script src="/script.js"></script>
</body>
</html>
